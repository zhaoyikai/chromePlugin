{
  "manifest_version": 3,
  "name": "木须柿子盖饭",
  "version": "1.0",
  "description": "阿恺最爱的木须柿子盖饭，里面添加了一键填写支付表单，一键复制节点信息到剪贴板，获取邮箱验证码...",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "恺哥百宝箱",
    "default_icon": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png",
      "48": "icon/icon-48.png"
    }
  },
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  }
}
